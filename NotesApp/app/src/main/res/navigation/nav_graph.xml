<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/noteListFragment">

    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.example.notesapp.ui.noteList.NoteListFragment"
        android:label="NoteListFragment"
        tools:layout="@layout/note_list_fragment">
        <action
            android:id="@+id/action_noteListFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.notesapp.ui.note.NoteFragment"
        android:label="note_fragment"
        tools:layout="@layout/note_fragment" >
        <argument
            android:name="note"
            app:argType="com.example.notesapp.data.entity.NoteEntity"
            android:defaultValue="@null"
            app:nullable="true"/>
    </fragment>
</navigation>